<Window x:Class="WPFWindFormDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WPF WindForm Details" Height="600" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48*" />
            <RowDefinition Height="513*" />
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="1" Name="DynamicContent" Margin="3">
            
        </ContentControl>
        <Button Content="|&lt;" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="ButtonFirst" VerticalAlignment="Top" Width="33" />
        <Button Content="&lt;" Height="23" HorizontalAlignment="Left" Margin="50,12,0,0" Name="ButtonPrevious" VerticalAlignment="Top" Width="33" />
        <Button Content="&gt;" Height="23" HorizontalAlignment="Left" Margin="89,12,0,0" Name="ButtonNext" VerticalAlignment="Top" Width="33" />
        <Button Content="&gt;|" Height="23" HorizontalAlignment="Left" Margin="128,12,0,0" Name="ButtonLast" VerticalAlignment="Top" Width="33" />
    </Grid>
</Window>
